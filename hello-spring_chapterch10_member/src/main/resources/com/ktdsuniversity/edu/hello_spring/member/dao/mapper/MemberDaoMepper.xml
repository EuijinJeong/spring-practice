<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktdsuniversity.edu.hello_spring.member.dao.MemberDao">

	<insert id="inserstNewMember" parameterType="com.ktdsuniversity.edu.hello_spring.member.vo.WriteNewMemberVO">
		INSERT MEMBERS
		(EMAIL
		, NAME
		, PASSWORD)
		VALUES
		(#{email}
		, #{name}
		, #{password})
	</insert>
	
	<select id="selectOneMember" resultType="com.ktdsuniversity.edu.hello_spring.member.vo.MemberVO">
		SELECT EMAIL
			 , NAME
			 , PASSWORD
		  FROM MEMBERS
 		 WHERE EMAIL = #{_email}
	</select>
	
	<select id="getEmailCount" resultType="">
	
	</select>
</mapper>