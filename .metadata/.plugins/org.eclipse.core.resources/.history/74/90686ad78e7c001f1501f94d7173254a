package com.ktdsuniversity.edu.hello_spring.bbs.web;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import com.ktdsuniversity.edu.hello_spring.bbs.service.BoardService;
import com.ktdsuniversity.edu.hello_spring.bbs.vo.BoardListVO;
import com.ktdsuniversity.edu.hello_spring.bbs.vo.BoardVO;
import com.ktdsuniversity.edu.hello_spring.bbs.vo.WriteBoardVO;

/**
 * 
 */
@Controller
public class BoardController {
	
	@Autowired
	private BoardService boardService;
	
	@GetMapping("/board/list") // http://localhost:8080/board/list로 연결
	public String viewBoardList(Model model) {
		BoardListVO boardListVO = this.boardService.getAllBoard();
		model.addAttribute("boardListVO", boardListVO);
	
		return "board/boardlist";
	}
	
	@GetMapping("/board/write")
	public String writeNewBoard(Model model) {
//		BoardListVO boardListVO = this.boardService.
		
		return null;
	}
	
	/**
	 * 사용자가 입력한 값을 서버에 전송하기 위한 컨트롤러 메서
	 * 
	 * @param writeBoardVO : 사용자가 입력한 값을 담은 VO 객체
	 * @return
	 */
	@PostMapping("/board/write")
	public WriteBoardVO doSomething(WriteBoardVO writeBoardVO) {
		
		// 데이터베이스에 전달할 객체인 BoardVO에 사용자가 입력한 정보를 담은 writeBoardVO를 할당.
		
		
		return writeBoardVO;
	}
	
}
