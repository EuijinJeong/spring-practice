<mapper namespace="com.ktdsuniversity.edu.hello_spring.dao.ToDoListDao">

	<insert id="insertNewToDoList" parameterType="com.ktdsuniversity.edu.hello_spring.vo.ToDoListWriteVO">
		INSERT INTO TODOLIST
		(ID
		, SBJCT
		, DEADLN)
		VALUES
		(SEQ_TODOLIST_PK.NEXTVAL
		, #{subject}
		, #{deadLine})
	</insert>
	
	<select id="selectAllToDoList" resultType="com.ktdsuniversity.edu.hello_spring.vo.ToDoVO">
		SELECT ID
	 		 , ISFIN
	 		 , SBJCT
	 		 , DEADLN
 		  FROM TODOLIST
	</select>
	
	<select id="selectCountToDoList" resultType="_int">
		SELECT count(1)
  		  FROM TODOLIST
	</select>
	
	<update id="updateIsFinished" parameterType="_id"></update>
	
</mapper>